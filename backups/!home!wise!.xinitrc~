#!/bin/bash

[[ -f ~/.Xresources ]] && xrdb -merge ~/.Xresources

# Add some fonts
xset +fp /usr/share/fonts/local
xset fp rehash

#setxkbmap -layout us

# No bell in X
xset -b

# Compositing
#xcompmgr &

# Cursor for X
xsetroot -cursor_name left_ptr

# X Background
#feh --bg-scale ~/.wallpapers/thewall.png &
feh --bg-scale ~/.wallpapers/desktopwallpapers.org.ua-3127.jpg &
# Tray setup
trayer --edge top --align right --SetDockType true --SetPartialStrut true --expand true --width 20 --transparent true --alpha 0 --tint 0x000000 --height 18 &

#Volume control
volumeicon &

# Network management
wicd-client --tray &
#nm-applet --sm-disable > /dev/null 2>/dev/null &

# Hide curson when unused
unclutter &

# Dropbox daemon
dropboxd &

xscreensaver -no-splash &

exec xmonad
